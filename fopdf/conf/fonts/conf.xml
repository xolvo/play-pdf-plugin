<fop version="1.1.1">
	<renderers>
		<renderer mime="application/pdf">
			<filterList>
				<value>flate</value>
	    	</filterList>

			<fonts>
				<font metrics-url="conf/fonts/metrics/arial.xml" kerning="yes" embed-url="conf/fonts/ttf/arial.ttf">
					<font-triplet name="Arial" style="normal" weight="normal"/>
				</font>
		      
				<font metrics-url="conf/fonts/metrics/arial_italic.xml" kerning="yes" embed-url="conf/fonts/ttf/arial_italic.ttf">
					<font-triplet name="Arial" style="italic" weight="normal"/>
				</font>
				
				<font metrics-url="conf/fonts/metrics/arial_bold.xml" kerning="yes" embed-url="conf/fonts/ttf/arial_bold.ttf">
					<font-triplet name="Arial" style="normal" weight="bold"/>
				</font>
		
				<font metrics-url="conf/fonts/metrics/arial_bold_italic.xml" kerning="yes" embed-url="conf/fonts/ttf/arial_bold_italic.ttf">
					<font-triplet name="Arial" style="italic" weight="bold"/>
				</font>
			</fonts>
	  </renderer>
	</renderers>
</fop>
